@{
}

<h2>Product Table</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Quality</th>
            <th>Detail view</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Category</td>
                @if(item.Price > 1000)
                {
                    <td>Premium Product</td>
                }
                else
                {
                    <td>Standard Product</td>
                }
                <td><a href="/product/details/@item.Id" class="btn btn-secondary">Details</a></td>
            </tr>
        }
    </tbody>
</table>
