@{
}

@{
    var titles = new String[] { "JSC", "SSC", "HSC" };
    var years = new int[] {2015,2017, 2019};
    var results = new float[] { 5.00f, 4.56f, 4.78f };
}

<h1>Portfolio Index</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Result</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i<titles.Length; i++)
        {
            <tr>
                <td>@titles[i]</td>
                <td>@years[i]</td>
                <td>@results[i]</td>
                @if(@results[i]==5.00){
                    <td>Congratulations</td>
                }
                else
                {
                    <td>BLNT</td>
                }
            </tr>
        }
        @*
        <tr>
            <td>@titles[0]</td>
            <td>@years[0]</td>
            <td>@results[0]</td>
        </tr>
        <tr>
            <td>@titles[1]</td>
            <td>@years[1]</td>
            <td>@results[1]</td>
        </tr>
        *@
    </tbody>
</table>