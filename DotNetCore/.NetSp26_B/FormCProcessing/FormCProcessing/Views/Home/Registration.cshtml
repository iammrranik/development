@Html.ValidationSummary()
<form action="" method="post">
    <input type="text" name="Name" placeholder="Name" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <input type="text" name="Email" placeholder="Email" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>
    <br />
    Gender:
    <input type="radio" name="Gender" value="Male" />Male
    <input type="radio" name="Gender" value="Female" />Female
    <br />
    <span class="text-danger">@Html.ValidationMessage("Gender")</span>
    <br />
    Department:
    <select name="Department">
        <option disabled selected>--Select Department--</option>
        <option>CS</option>
        <option>EEE</option>
        <option>BBA</option>
    </select>
    <br />
    Hobbies:
    <input type="checkbox" name="Hobbies[]" value="Cricket" /> Cricket
    <input type="checkbox" name="Hobbies[]" value="Football" /> Football
    <br />
    <input type="text" name="Roll" placeholder="Roll" class="form-control" />
    <input type="submit" value="Registration" class="btn btn-danger" />
</form>
