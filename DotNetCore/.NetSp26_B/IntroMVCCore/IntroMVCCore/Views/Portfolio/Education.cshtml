<h2>Name: @ViewBag.Name</h2>
<h2>Id: @ViewBag.Id</h2>

@{
    var titiles = new string[] { "SSC","HSC"};
    var years = new int[] { 2017,2019};
    var results = new float[] { 4.56f, 5.00f};
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Result</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < titiles.Length; i++)
        {
            
            <tr>
                <td>@titiles[i]</td>
                <td>@years[i]</td>
                <td>@results[i]</td>
                @if (results[i] == 5.00)
                {
                    <td>Congrats!</td>

                }
                else
                {
                   <td>BLNT</td>   
                }
            </tr>
            
        }
        @* <tr>
            <td>@titiles[0]</td>
            <td>@years[0]</td>
            <td>@results[0]</td>
        </tr>
        <tr>
            <td>@titiles[1]</td>
            <td>@years[1]</td>
            <td>@results[1]</td>
        </tr> *@
    </tbody>
</table>
