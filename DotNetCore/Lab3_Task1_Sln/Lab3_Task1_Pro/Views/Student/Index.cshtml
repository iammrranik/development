@{
}

<h2>Student Table</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Cgpa</th>
            <th>Age Remarks</th>
            <th>Cgpa Remakes</th>
            <th>Profile</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Department</td>
                <td>@item.Cgpa</td>

                @if(item.Age < 18)
                {
                   <td>Minor</td> 
                }else{
                    <td>Adult</td>
                }

                @if(item.Cgpa < 3.5)
                {
                    <td>Average</td>
                }else{
                    <td>Excellent</td>
                }

                <td><a href="student/profile/@item.Id" class="btn btn-primary">Details</a></td>
            </tr>
        }
    </tbody>
</table>
